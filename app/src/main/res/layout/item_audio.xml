<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/audio_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/item_audio_play"
            android:padding="4dp">

            <LinearLayout
                android:id="@+id/track_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/item_audio_time"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingEnd="28dp">

                <TextView
                    android:id="@+id/dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textColor="?attr/colorSecondary"
                    android:textSize="14sp"
                    tools:text="Artist" />

                <TextView
                    android:id="@+id/dialog_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textSize="12sp"
                    tools:text="Title" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sub_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/item_audio_time"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingEnd="2dp">

                <ImageView
                    android:id="@+id/my"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end"
                    android:src="@drawable/my"
                    android:tint="?colorSecondary" />

                <ImageView
                    android:id="@+id/lyric"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end"
                    android:src="@drawable/lyric"
                    android:tint="?colorSecondary" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_audio_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                tools:text="Time" />

            <ImageView
                android:id="@+id/saved"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@id/item_audio_time"
                android:layout_alignParentEnd="true"
                android:src="@drawable/downloaded"
                android:tint="?attr/colorPrimary" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/item_audio_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/audio_button"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/play" />
    </RelativeLayout>

    <View
        android:id="@+id/item_audio_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/audio_root"
        android:layout_alignBottom="@+id/audio_root"
        android:background="#ffb9b9b9"
        android:visibility="invisible" />
</RelativeLayout>