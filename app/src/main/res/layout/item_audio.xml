<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/item_audio_play"
        android:padding="4dp">

        <LinearLayout
            android:id="@+id/track_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/item_audio_time"
            android:orientation="vertical"
            android:paddingStart="0dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="?attr/colorSecondary"
                tools:text="Artist" />

            <TextView
                android:id="@+id/dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingStart="0dp"
                android:paddingEnd="16dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                tools:text="Title" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sub_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/item_audio_time"
            android:orientation="vertical"
            android:paddingStart="0dp"
            android:paddingEnd="2dp">

            <ImageView
                android:id="@+id/my"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:src="@drawable/my"
                android:tint="?colorSecondary" />

            <ImageView
                android:id="@+id/lyric"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:src="@drawable/lyric"
                android:tint="?colorSecondary" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_audio_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            tools:text="Time" />

        <ImageView
            android:id="@+id/saved"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/item_audio_time"
            android:layout_alignParentEnd="true"
            android:src="@drawable/save"
            android:tint="?attr/colorPrimary" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/item_audio_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@drawable/audio_button"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/play" />

</RelativeLayout>