<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bottombar_semitransparent"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <ImageButton
            android:id="@id/exo_prev"
            style="@style/ExoMediaButton.Previous"
            android:alpha="0.8"
            android:src="@drawable/page_first"
            android:tint="?colorSecondary" />

        <ImageButton
            android:id="@id/exo_rew"
            style="@style/ExoMediaButton.Rewind"
            android:alpha="0.8"
            android:tint="?colorSecondary" />

        <ImageButton
            android:id="@id/exo_shuffle"
            style="@style/ExoMediaButton"
            android:alpha="0.8"
            android:src="@drawable/shuffle"
            android:tint="?colorSecondary" />

        <ImageButton
            android:id="@id/exo_repeat_toggle"
            style="@style/ExoMediaButton"
            android:alpha="0.8"
            android:src="@drawable/repeat"
            android:tint="?colorSecondary" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@id/exo_play"
            style="?attr/fab_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:src="@drawable/play"
            app:fabSize="normal" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@id/exo_pause"
            style="?attr/fab_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:src="@drawable/pause"
            app:fabSize="normal" />

        <ImageButton
            android:id="@id/exo_ffwd"
            style="@style/ExoMediaButton.FastForward"
            android:alpha="0.8"
            android:tint="?colorSecondary" />

        <ImageButton
            android:id="@id/exo_next"
            style="@style/ExoMediaButton.Next"
            android:alpha="0.8"
            android:src="@drawable/page_last"
            android:tint="?colorSecondary" />

        <ImageButton
            android:id="@id/exo_vr"
            style="@style/ExoMediaButton.VR"
            android:alpha="0.8"
            android:tint="?colorSecondary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:includeFontPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="#aaffffff"
            android:textSize="12sp" />

        <com.google.android.exoplayer2.ui.DefaultTimeBar
            android:id="@id/exo_progress"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:alpha="0.8"
            app:buffered_color="?colorSecondary"
            app:played_ad_marker_color="?colorPrimary"
            app:played_color="?colorPrimary"
            app:scrubber_color="?colorPrimary"
            app:unplayed_color="#3E393939" />

        <TextView
            android:id="@id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:includeFontPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="#aaffffff"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>
