<resources>

    <style name="Base.App.DayNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">?dividerColor</item>-->
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="statusbarNonColoredColor">#000</item>
        <item name="toolbarElevation">@dimen/toolbar_with_elevation</item>
    </style>

    <style name="Base.App.DayNight.LightSpecific" parent="Base.App.DayNight">
        <item name="android:statusBarColor">#BBBBBB</item>
    </style>

    <style name="App.DayNight" parent="Base.App.DayNight.LightSpecific">
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.AppTheme.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.AppTheme.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.AppTheme.LargeComponent
        </item>

        <item name="materialCardViewStyle">@style/Theme.MaterialCardView</item>
        <item name="floatingActionButtonStyle">@style/Theme.FloatingActionButton</item>

        <item name="dividerColor">#E1E3E7</item>

        <item name="dialogs_unread_color">#20b0b0b0</item>
        <item name="navi_menu_selector">@drawable/list_selector_white</item>
        <item name="message_unread_color">#90234b81</item>

        <item name="messages_background_color">#ECECEC</item>
        <item name="oval_avatar_background">@drawable/sel_button_round_4_white</item>

        <item name="message_bubble_color">@android:color/white</item>

        <item name="chat_background_cookies">@drawable/cookies_white</item>
        <item name="chat_background_lines">@drawable/lines_white</item>
        <item name="chat_background_runes">@drawable/runes_white</item>

        <item name="buttonAddPhotoBackground">@drawable/background_rectangle_dash_inverse</item>
    </style>

    <style name="App.DayNight.Ice" parent="App.DayNight">
        <item name="colorPrimary">#448AFF</item>
        <item name="colorSecondary">#1E88E5</item>
        <item name="colorOnPrimary">#FFF</item>
        <item name="colorOnSecondary">#FFF</item>
        <item name="icon_color_active">#448AFF</item>
    </style>

    <style name="App.DayNight.Fire" parent="App.DayNight">
        <item name="colorPrimary">#FF9800</item>
        <item name="colorSecondary">#FFA726</item>
        <item name="colorOnPrimary">#FFF</item>
        <item name="colorOnSecondary">#FFF</item>
        <item name="icon_color_active">#FF9800</item>
    </style>

    <style name="App.DayNight.Red" parent="App.DayNight">
        <item name="colorPrimary">#ff0056</item>
        <item name="colorSecondary">#ff63a0</item>
        <item name="colorOnPrimary">#FFF</item>
        <item name="colorOnSecondary">#FFF</item>
        <item name="icon_color_active">#ff0056</item>
    </style>

    <style name="App.DayNight.Violet" parent="App.DayNight">
        <item name="colorPrimary">#9800ff</item>
        <item name="colorSecondary">#8500ff</item>
        <item name="colorOnPrimary">#FFF</item>
        <item name="colorOnSecondary">#FFF</item>
        <item name="icon_color_active">#9800ff</item>
    </style>

    <style name="App.DayNight.Green" parent="App.DayNight">
        <item name="colorPrimary">#268000</item>
        <item name="colorSecondary">#36b500</item>
        <item name="colorOnPrimary">#FFF</item>
        <item name="colorOnSecondary">#FFF</item>
        <item name="icon_color_active">#268000</item>
    </style>

    <style name="App.DayNight.Gray" parent="App.DayNight">
        <item name="colorPrimary">#444444</item>
        <item name="colorSecondary">#777777</item>
        <item name="colorOnPrimary">#FFF</item>
        <item name="colorOnSecondary">#FFF</item>
        <item name="icon_color_active">#444444</item>
    </style>

    <style name="Theme.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">3dp</item>
    </style>

    <style name="QuickReply" parent="Theme.MaterialComponents.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="message_bubble_color">#ECECEC</item>
        <item name="oval_avatar_background">@drawable/sel_button_round_4_white</item>
        <item name="quick_reply_icon_color">#151515</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface">
        <!--        <item name="android:tint">?colorOnSurface</item>-->
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <item name="actionMenuTextColor">?colorOnSurface</item>
        <item name="android:textColorPrimary">?colorOnSurface</item>
        <item name="android:textColorSecondary">?colorOnSurface</item>
    </style>

    <style name="Theme.Toolbar.Surface" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface">
        <!--        <item name="android:tint">?colorOnSurface</item>-->
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <item name="actionMenuTextColor">?colorOnSurface</item>
        <item name="android:textColorPrimary">?colorOnSurface</item>
        <item name="android:textColorSecondary">?colorOnSurface</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?colorOnSurface</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Theme.Toolbar.Photo" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:tint">@android:color/white</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="Theme.Tablayout" parent="Widget.MaterialComponents.TabLayout.PrimarySurface">
        <item name="tabRippleColor">?colorPrimary</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextColor">?android:textColorSecondary</item>
        <item name="tabSelectedTextColor">?colorPrimary</item>
        <item name="tabIndicatorColor">?colorPrimary</item>
        <item name="enforceTextAppearance">true</item>
    </style>

    <style name="Theme.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?colorSurface</item>
        <item name="tint">?colorSecondary</item>
    </style>

    <style name="ShapeAppearance.AppTheme.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ShapeAppearance.AppTheme.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ShapeAppearance.AppTheme.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

</resources>
